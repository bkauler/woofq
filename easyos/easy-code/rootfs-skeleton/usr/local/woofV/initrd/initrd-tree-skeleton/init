 cp -a /skeleton/* /xram/
 mkdir /xram/.session
 cp -a /mnt/${WKG_DEV}/${WKG_DIR}.session/* /xram/.session/
 cp -a /mnt/${WKG_DEV}/${WKG_DIR}.session/.wh..wh* /xram/.session/ 2>/dev/null #? 191211
