sync
echo -e "\\033[1;35m${S220} ${LAYERFS}\\033[0;39m"
if [ "$LAYERFS" == "aufs" ];then #170525 20220521
 if [ $EOS_TOP_LEVEL_ZRAM -eq 1 ];then #20220521 20220529
