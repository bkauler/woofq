Name-Real: EasyOS user ${RANDOM}
Name-Comment: passphrase is hash from password
Name-Email: noone@nowhere.com
Expire-Date: 0
Passphrase: ${PASSPHRASE}
%commit
%echo done
EOF
 GNUPGHOME="/mnt/${WKG_DEV}/${WKG_DIR}.session/root/.gnupg" gpg --batch --gen-key foo
