   back|bak|BACK|BAK) echo -n ",last" > /mnt/${WKG_DEV}/${WKG_DIR}.rollback.flg ;; #20230104
   new|NEW) echo -n ",erase" > /mnt/${WKG_DEV}/${WKG_DIR}.rollback.flg ;; #181009 200720 20230104
  esac
 done
fi

