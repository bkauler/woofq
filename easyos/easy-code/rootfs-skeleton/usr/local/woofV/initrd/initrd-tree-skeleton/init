 #20230507 generate hash from password...
 PASSPHRASE="$(echo -n ${rootPW}xxxx | argon2 ${SALT} -l 32 -r)" #64 byte hash.
 mkdir -p /mnt/${WKG_DEV}/${WKG_DIR}.session/root/.gnupg
