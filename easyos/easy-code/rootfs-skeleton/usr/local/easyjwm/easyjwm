easyjwm_help()
{
export EASYJWM_HELP="
<window default-width=\"425\" title=\"EasyJWM\" icon-name=\"easyjwm64\" window-position=\"3\" resizable=\"false\">
 <vbox margin=\"10\" width-request=\"425\">
