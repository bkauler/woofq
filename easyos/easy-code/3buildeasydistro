 losetup -d ${LOOP3}
fi

if [ "$WOOF_TARGETARCH" == "x86" ];then #20220801
 #turn off esp flag (change partition id from ef to 83)...
 busybox echo -e 't\n1\n83\nw' | fdisk ${SKELETON_NAME}.img
