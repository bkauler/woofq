 sed -i -e  "s%^DISTRO_SKELETON_IMAGE=.*%DISTRO_SKELETON_IMAGE='${DISTRO_SKELETON_IMAGE}'%" rootfs-complete/etc/DISTRO_SPECS
 #also, update mime db for easy-*.img renamed to ${DISTRO_NAME_SHORT,,}-*.img
