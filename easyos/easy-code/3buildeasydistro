   ln -s . rootfs-complete/lib/x86_64-linux-gnu
  fi
  if [ ! -e rootfs-complete/usr/lib/x86_64-linux-gnu ];then
   ln -s . rootfs-complete/usr/lib/x86_64-linux-gnu
  fi
 ;;
esac

