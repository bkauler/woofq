#for create-live-cd script...
cp -a -f img_mntpt2/easyos/initrd initrd-${DEFAULTLANG1}

echo 'Copying easy.sfs into img file...'
cp -a ${DISTRO_NAME_SHORT,,}.sfs img_mntpt2/easyos/
sync
umount img_mntpt2 #20220612

#181205
#change the disk identifier...
echo
echo "Changing the disk identifier in ${SKELETON_NAME}.img ..."
echo -e "x\ni\n0x${RANDHEX8}\nr\nw" | fdisk ${SKELETON_NAME}.img
sync

#20220622 update legacy-BIOS booting... 20220623 fix
if [ "$BOOTLOADER" == "limine" ];then
 LOOP3="$(losetup -f)"
 losetup ${LOOP3} ${SKELETON_NAME}.img
 sleep 0.5
 if [ "$WOOF_TARGETARCH" == "$WOOF_HOSTARCH" -a "$USRMERGEconflict" == "no" ];then #20221010 20230909 20240814
  echo "EXECUTING: rootfs-complete/usr/bin/limine  bios-install ${LOOP3} --force-mbr"
  rootfs-complete/usr/bin/limine bios-install ${LOOP3} --force-mbr
 else
  echo "EXECUTING: limine bios-install ${LOOP3} --force-mbr"
  limine bios-install ${LOOP3} --force-mbr 
 fi
