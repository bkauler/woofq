sed -i '/#QUIRKY/d' /tmp/DISTRO_SPECSCOPY
#171016 remove trailing " #EASY"...
sed -i -e 's% +#EASY$%%' /tmp/DISTRO_SPECSCOPY

. /tmp/DISTRO_SPECSCOPY

