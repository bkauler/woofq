#20230904 check symlinks...
while read aL
do
 aT="$(busybox readlink -n $aL)"
 if [ -f sandbox3/devx/usr/bin/${aT##*/} ];then
  if [ ! -h sandbox3/devx/usr/bin/${aT##*/} ];then
   ln -snf ${aT##*/} ${aL}
  fi
 fi
done <<_END2
$(find sandbox3/devx/usr/bin -mindepth 1 -maxdepth 1 -type l)
_END2
while read aL
do
 aT="$(busybox readlink -n $aL)"
 if [ -f sandbox3/devx/usr/lib/${aT##*/} ];then
  if [ ! -h sandbox3/devx/usr/lib/${aT##*/} ];then
   ln -snf ${aT##*/} ${aL}
  fi
 fi
done <<_END2
$(find sandbox3/devx/usr/lib -mindepth 1 -maxdepth 1 -type l)
_END2

