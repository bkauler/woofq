ALLGENNAMESD="`echo "$PKGS_SPECS_TABLE" | grep '^yes' | cut -f 2 -d '|' | sed -e 's%$%_DEV%'`"
for ONEDEV in `ls -1 packages-${DISTRO_FILE_PREFIX} | grep '_DEV$' | tr '\n' ' '`
do

 ONEPKG="`echo -n "$ONEDEV" | sed -e 's%_DEV%%'`"
 
 devPATTERN='^'"$ONEDEV"
 if [ "`echo "$ALLGENNAMESD" | grep "$devPATTERN"`" != "" ];then
  
  #20230909 simplified copy, target may have symlinks in path...
  #20230925 rox-filer: usr/local/apps/ROX-Filer/Messages is a symlink, was getting changed to a folder...
  #20230930 fix...
  while read aF
  do
   aD="$(dirname "$aF")"
   mkdir -p sandbox3/devx/"$aD"/
   if [ -d packages-${DISTRO_FILE_PREFIX}/${ONEDEV}/"$aF" ];then
    if [ -e sandbox3/devx/"$aF" ];then
     continue
    fi
   else
    if [ -h packages-${DISTRO_FILE_PREFIX}/${ONEDEV}/"$aF" ];then
     if [ -e sandbox3/devx/"$aF" ];then
      if [ ! -h sandbox3/devx/"$aF" ];then
       continue
      fi
     fi
    fi
   fi
   cp -a --remove-destination packages-${DISTRO_FILE_PREFIX}/${ONEDEV}/"$aF" sandbox3/devx/"$aD"/
  done <<_END1
$(find packages-${DISTRO_FILE_PREFIX}/${ONEDEV} -mindepth 1 | sed -e "s%packages-${DISTRO_FILE_PREFIX}/${ONEDEV}/%%")
_END1
  
  sync
 fi
done
sync

