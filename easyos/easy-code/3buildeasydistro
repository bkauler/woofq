#20230304 support distro name other than "EasyOS" and "Easy"
#doing this fairly early in the script (need before run welcome.sh)...
#code based on code in woofq/puppy/7build-puppy-cd
#20230305 i think best restrict search to rootfs-skeleton, not rootfs-complete...
#20230308 immediately fix new distro-name in .mo files...
echo -n '' > /tmp/3buildeasydistro-chg-td #20230308
if [ "$DISTRO_NAME_SHORT" != "Easy" ];then
 echo "Replacing Easy with ${DISTRO_NAME_SHORT} in rootfs-skeleton scripts..."
 mkdir -p temp11
 echo -n '' > Easy-2-Wary-files.log
 for aFILE in `find ../rootfs-skeleton/usr -type f`
 do
  [ ! "$aFILE" ] && continue
  file ${aFILE} > /tmp/3buildeasydistro-tmp11
  if ! grep -q -E 'ASCII text|UTF-8 text' /tmp/3buildeasydistro-tmp11 ; then continue; fi
  if grep -q 'shell script' /tmp/3buildeasydistro-tmp11;then
   if ! grep -q '^export TEXTDOMAIN' "$aFILE"; then continue; fi
   BASEPATH="$(echo -n "$aFILE" | sed -e 's%\.\./rootfs-skeleton/%%')"
   BASEDIR="$(dirname "$BASEPATH")"
   if [ -f rootfs-complete/${BASEPATH} ];then
    echo -n '.'
    BASENAME="$(basename ${BASEPATH})"
    cp -a -f rootfs-complete/${BASEPATH} temp11/
    sed -i -e 's%\(gettext [^)]*\)EasyOS%\1'"${DISTRO_NAME_NORMAL}%g" rootfs-complete/${BASEPATH}
    sed -i -e 's%\(gettext [^)]*\)Easy\([. ]\)%\1'"${DISTRO_NAME_SHORT}"'\2%g' rootfs-complete/${BASEPATH}
    cmp -s temp11/${BASENAME} rootfs-complete/${BASEPATH}
    if [ $? -ne 0 ];then
     echo "rootfs-complete/${BASEPATH}" >> Easy-2-Wary-files.log
     
     #20230308 instead of change textdomain, edit .mo files...
     ##change the TEXTDOMAIN name, preppend "wary_"...
     #echo -n "${BASENAME}"
     #if ! grep -q "^export TEXTDOMAIN=${DISTRO_NAME_SHORT,,}_" rootfs-complete/${BASEPATH}; then
     # sed -i -e 's%^export TEXTDOMAIN=\([^ ]*\)%export TEXTDOMAIN='"${DISTRO_NAME_SHORT,,}_"'\1%' rootfs-complete/${BASEPATH}
     #fi
     aaTEXTDOMAIN="$(grep '^export TEXTDOMAIN=' rootfs-complete/${BASEPATH} | cut -f 2 -d '=' | cut -f 1 -d ' ')"
     grep -q -x "$aaTEXTDOMAIN" /tmp/3buildeasydistro-chg-td
     if [ $? -ne 0 ];then
      for aaMO in $(find rootfs-complete/usr/share/locale -type f -name "${aaTEXTDOMAIN}.mo")
      do
       [ "$aaMO" == "" ] && continue
       msgunfmt --no-wrap ${aaMO} > /tmp/3buildeasydistro-tmp.po
       sed -i -e "s%Easy%${DISTRO_NAME_SHORT}%g" /tmp/3buildeasydistro-tmp.po
       rm -f ./${aaMO}
       msgfmt --output-file=${aaMO} /tmp/3buildeasydistro-tmp.po
      done
      echo "$aaTEXTDOMAIN" >> /tmp/3buildeasydistro-chg-td
     fi
     
    fi
    rm -f temp11/${BASENAME}
   fi
  fi
 done
 echo
 sync
fi

#20230305 replace "easy.sfs" with ${DISTRO_NAME_SHORT,,} (lowercase letters)
#do this separate to the above code-block, in case change my mind...
echo -n '' > /tmp/3buildeasydistro-chg-td #20230308
if [ "$DISTRO_NAME_SHORT" != "Easy" ];then
 echo "replacing all \"easy.sfs\" text with \"${DISTRO_NAME_SHORT,,}.sfs\" ..."
 for aFILE in $(grep -rl 'easy\.sfs' ../rootfs-skeleton)
 do
  [ "$aFILE" == "" ] && continue
  BASEPATH="$(echo -n "$aFILE" | sed -e 's%\.\./rootfs-skeleton/%%')"
  BASEDIR="$(dirname "$BASEPATH")"
  BASENAME="$(basename ${BASEPATH})"
  if [ ! -f rootfs-complete/${BASEPATH} ]; then continue; fi #precaution.
  file ${aFILE} > /tmp/3buildeasydistro-tmp11
  if ! grep -q -E 'ASCII text|UTF-8 text' /tmp/3buildeasydistro-tmp11 ; then continue; fi
  echo -n '.'
  if grep -q 'shell script' /tmp/3buildeasydistro-tmp11;then
   #detect if easy.sfs is occurring in a gettext string...
   if grep -q '^export TEXTDOMAIN' "$aFILE"; then
    cp -a -f rootfs-complete/${BASEPATH} temp11/
    sed -i -e 's%\(gettext [^)]*\)easy\.sfs%\1'"${DISTRO_NAME_SHORT,,}.sfs%g" rootfs-complete/${BASEPATH}
    cmp -s temp11/${BASENAME} rootfs-complete/${BASEPATH}
    if [ $? -ne 0 ];then
     echo "rootfs-complete/${BASEPATH}" >> Easy-2-Wary-files.log
     
     #20230308 instead of change textdomain, edit .mo files...
     ##change the TEXTDOMAIN name, preppend "wary_"...
     #echo -n "${BASENAME}"
     #if ! grep -q "^export TEXTDOMAIN=${DISTRO_NAME_SHORT,,}_" rootfs-complete/${BASEPATH} ; then
     # sed -i -e 's%^export TEXTDOMAIN=\([^ ]*\)%export TEXTDOMAIN='"${DISTRO_NAME_SHORT,,}_"'\1%' rootfs-complete/${BASEPATH}
     #fi
     aaTEXTDOMAIN="$(grep '^export TEXTDOMAIN=' rootfs-complete/${BASEPATH} | cut -f 2 -d '=' | cut -f 1 -d ' ')"
     grep -q -x "$aaTEXTDOMAIN" /tmp/3buildeasydistro-chg-td
     if [ $? -ne 0 ];then
      for aaMO in $(find rootfs-complete/usr/share/locale -type f -name "${aaTEXTDOMAIN}.mo")
      do
       [ "$aaMO" == "" ] && continue
       msgunfmt --no-wrap ${aaMO} > /tmp/3buildeasydistro-tmp.po
       sed -i -e "s%easy\.sfs%${DISTRO_NAME_SHORT,,}.sfs%g" /tmp/3buildeasydistro-tmp.po
       rm -f ./${aaMO}
       msgfmt --output-file=${aaMO} /tmp/3buildeasydistro-tmp.po
      done
      echo "$aaTEXTDOMAIN" >> /tmp/3buildeasydistro-chg-td
     fi
     
    fi
    rm -f temp11/${BASENAME}
   fi
  fi
  #direct substitution in all text files...
  sed -i -e "s%easy\.sfs%${DISTRO_NAME_SHORT,,}.sfs%g" rootfs-complete/${BASEPATH}
 done
 sync
 echo
fi

#20230305 DISTRO_SKELETON_IMAGE name got modified above, update in DISTRO_SPECS...
