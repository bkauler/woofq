  aL2="${aL2##*_}"
  aL2="${aL2:0:2}"
  grep -q -x -f /tmp/3bed-lang-codes <<<$aL2
  if [ $? -ne 0 ];then
   rm -f ./$aPATH
  fi
 done
fi

