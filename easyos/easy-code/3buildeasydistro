 for aPATH in `find nls/usr/lib/libreoffice/program/resource -mindepth 1 -maxdepth 1 -type d | tr '\n' ' '`
 do
  aDIR="${aPATH##*/}"
  grep -q -f /tmp/3bed-lang-codes <<<$aDIR
  if [ $? -ne 0 ];then
   rm -rf ./$aPATH
  fi
 done
fi
#usr/lib/libreoffice/share/registry/res
