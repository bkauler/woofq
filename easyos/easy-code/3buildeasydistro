#fi

#20230904 check symlinks...
while read aL
do
 aT="$(busybox readlink -n $aL)"
 if [ -f sandbox3/rootfs-complete/usr/bin/${aT##*/} ];then
  if [ ! -h sandbox3/rootfs-complete/usr/bin/${aT##*/} ];then
   ln -snf ${aT##*/} ${aL}
  fi
 fi
done <<_END2
$(find sandbox3/rootfs-complete/usr/bin -mindepth 1 -maxdepth 1 -type l)
_END2
while read aL
do
 aT="$(busybox readlink -n $aL)"
 if [ -f sandbox3/rootfs-complete/usr/lib/${aT##*/} ];then
  if [ ! -h sandbox3/rootfs-complete/usr/lib/${aT##*/} ];then
   ln -snf ${aT##*/} ${aL}
  fi
 fi
done <<_END2
$(find sandbox3/rootfs-complete/usr/lib -mindepth 1 -maxdepth 1 -type l)
_END2

echo
[ -s deb-postinst-log ] && echo "...'deb-postinst-log' has log of executing postinst scripts"
echo

if [ -f sandbox3/img_mntpt/ldlinux.sys ];then #20220622 ldlinux.sys is part of syslinux.
 #200322 refind, also copy the ext4 driver...
