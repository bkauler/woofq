 if [ "$MAINBROWSER" != "$ALTBROWSER" ];then
  echo '#!/bin/sh' > rootfs-complete/usr/local/bin/defaulthtmlviewer
  echo "exec ${ALTBROWSER} \"\$@\"" >> rootfs-complete/usr/local/bin/defaulthtmlviewer
  chmod 755 rootfs-complete/usr/local/bin/defaulthtmlviewer
 fi
fi

#20231217 set xdg default browser. this will exist, in rootfs-skeleton...
if [ -s rootfs-complete/root/.config/mimeapps.list ];then
 if [ "${MAINBROWSER}" != "chromium" ];then
  sed -i -e "s%chromium%${MAINBROWSER}%" rootfs-complete/root/.config/mimeapps.list
 fi
fi
if [ -d rootfs-complete/home/${MAINBROWSER} ];then
 cp -a -f rootfs-complete/root/.config/mimeapps.list rootfs-complete/home/${MAINBROWSER}/.config/
 UG="$(grep "^${MAINBROWSER}:" rootfs-complete/etc/passwd | cut -f 3,4 -d ':')"
 if [ "$UG" ];then
  chown ${UG} rootfs-complete/home/${MAINBROWSER}/.config/mimeapps.list
 fi
fi

