 rm -f devx_${VER}_${DISTRO_TARGETARCH}/usr/bin/man
 ln -s pman devx_${VER}_${DISTRO_TARGETARCH}/usr/bin/man #so as to restore symlink if earlier devx deleted it.
fi

#20220125 arch-linux, make sure libs are symlinks...
if [ "$DISTRO_BINARY_COMPAT" == "arch" -o "$DISTRO_BINARY_COMPAT" == "void" ];then #20220121 20230903
 cd devx_${VER}_${DISTRO_TARGETARCH}
 #20240120 fix...
 for aLIB in lib lib64 #20240120 removed usr/lib64
 do
  if [ -d $aLIB ];then
   if [ ! -h $aLIB ];then
    #do extra checking...
    #cp -a ${aLIB}/* usr/lib/
    for aF in `find ${aLIB} -mindepth 1 -maxdepth 1`
    do
     [ "$aF" == "" ] && continue
     if [ -h "$aF" ];then
      if [ ! -e usr/lib/${aF/*\//} ];then #instead of using cp -n (no clobber)
       cp -a $aF usr/lib/
      fi
     else
      cp -a -f --remove-destination $aF usr/lib/
     fi
    done
    rm -rf ./${aLIB}
    ln -s -r usr/lib ${aLIB}
   else
    ln -snf -r usr/lib ${aLIB}
   fi
  else
   ln -snf -r usr/lib ${aLIB}
  fi
 done

 for aLIB in usr/lib64 #20240120
 do
  if [ -d $aLIB ];then
   if [ ! -h $aLIB ];then
    #do extra checking...
    #cp -a ${aLIB}/* usr/lib/
    for aF in `find ${aLIB} -mindepth 1 -maxdepth 1`
    do
     [ "$aF" == "" ] && continue
     if [ -h "$aF" ];then
      if [ ! -e usr/lib/${aF/*\//} ];then #instead of using cp -n (no clobber)
       cp -a $aF usr/lib/
      fi
     else
      cp -a -f --remove-destination $aF usr/lib/
     fi
    done
    rm -rf ./${aLIB}
    ln -s -r lib ${aLIB}
   else
    ln -snf -r lib ${aLIB}
   fi
  else
   ln -snf -r lib ${aLIB}
  fi
 done
 
 #do bin folders also... 20240120 fix...
 mkdir -p usr/bin
 for aBIN in bin sbin #20240120 removed usr/sbin
 do
  if [ -d ${aBIN} ];then
   if [ ! -h ${aBIN} ];then
    #20220125 need extra checking...
    #cp -a ${aBIN}/* usr/bin/
    for aF in `find ${aBIN} -mindepth 1 -maxdepth 1`
    do
     [ "$aF" == "" ] && continue
     if [ -h "$aF" ];then
      #cp -a -n $aF usr/bin/ #-n  is no clobber
      if [ ! -e usr/bin/${aF/*\//} ];then #instead of using cp -n (no clobber)
       cp -a $aF usr/bin/ #-n  is no clobber
      fi
     else
      cp -a -f --remove-destination $aF usr/bin/
     fi
    done
    rm -rf ./${aBIN}
    ln -s -r usr/bin ${aBIN}
   else #redundant
    ln -snf usr/bin ${aBIN}
   fi
  else #redundant
   ln -snf usr/bin ${aBIN}
  fi
 done

 for aBIN in usr/sbin #20240120
 do
  if [ -d ${aBIN} ];then
   if [ ! -h ${aBIN} ];then
    for aF in `find ${aBIN} -mindepth 1 -maxdepth 1`
    do
     [ "$aF" == "" ] && continue
     if [ -h "$aF" ];then
      if [ ! -e usr/bin/${aF/*\//} ];then #instead of using cp -n (no clobber)
       cp -a $aF usr/bin/ #-n  is no clobber
      fi
     else
      cp -a -f --remove-destination $aF usr/bin/
     fi
    done
    rm -rf ./${aBIN}
    ln -s -r bin ${aBIN}
   else #redundant
    ln -snf bin ${aBIN}
   fi
  else #redundant
   ln -snf bin ${aBIN}
  fi
 done

 cd ..
fi


SIZEK="$(du -s -k devx_${VER}_${DISTRO_TARGETARCH} | cut -f 1)"
#echo "devx-${VER}-${DISTRO_FILE_PREFIX}|devx|${VER}-${DISTRO_FILE_PREFIX}||Utility;development|${SIZEK}K||devx-${VER}-${DISTRO_FILE_PREFIX}.pet||A complete C/C++/Vala/Genie/BaCon compiling environment for Quirky, with extras such as svn, git, gdb|${DISTRO_BINARY_COMPAT}|${DISTRO_COMPAT_VERSION}||" > devx-${VER}-${DISTRO_FILE_PREFIX}/pet.specs

