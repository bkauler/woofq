#20250106 remove invalid orange-ball .desktop files... 20250107 improve. 20250111 fix.
#for xDT in $(grep -H '/usr/local/orange' rootfs-complete/usr/share/applications/*.desktop)
while read xDT
do
 #ex: rootfs-complete/usr/share/applications/vym.desktop:Exec=/usr/local/orange/orange.install vym
 [ -z "$xDT" ] && continue
 DT="${xDT/:*/}"
 EX="${xDT##* }"
 [ ! -e rootfs-complete/usr/local/orange/config/${EX} ] && continue
 grep -E '^PN|^EN|^RN|^AN|^SD|^HP|^MI|^UN' rootfs-complete/usr/local/orange/config/${EX} > /tmp/orange-config-${EX}
 sed -i -e 's%^%xx%' /tmp/orange-config-${EX}
 . /tmp/orange-config-${EX} #have xxPN pkg name
 grep -q -i -F "|${xxPN}|" rootfs-complete/root/.packages/Packages-*
 RET1=$?
 if [ $RET1 -ne 0 ];then
  grep -q -i -F "|${xxPN}alt|" rootfs-complete/root/.packages/Packages-*
  RET1=$?
 fi
 if [ $RET1 -ne 0 ];then
  echo "Removing ${DT}"
  rm -f rootfs-complete/usr/share/applications/${DT##*/}
 fi
 rm -f /tmp/orange-config-${EX}
done <<EOF6
$(grep -H '/usr/local/orange' rootfs-complete/usr/share/applications/*.desktop)
EOF6

